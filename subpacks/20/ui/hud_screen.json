// File from PrimeMinus on MCPEDL //
{
  "namespace": "hud",

  "chat_grid_item": {
    "type": "panel",
    "layer": 1,
    "size": [ "100%-2px", "100%c" ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "controls": [
      {
        "chat_background": {
          "type": "image",
          "texture": "textures/ui/Black",
          "alpha": 0.2,
          "size": [ "100%", "100%c" ],
          "anims": [
            "@hud.anim_chat_bg_wait"
          ],
          "controls": [
            {
              "chat_text@chat_label": {
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "offset": [ 2, 0 ]
              }
            }
          ]
        }
      }
    ]
  },
  "anim_chat_bg_alpha": {
    "from": 0.2
  }
}
